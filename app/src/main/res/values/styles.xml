<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Style_RadioButton" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:textSize">16sp</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textColor">@color/selector_radiobtn_textcolor</item>
    </style>

    <style name="Style_large_text">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Style_normal_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Style_small_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#808080</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="BookActivity" parent="AppTheme">
        <item name="android:activityCloseEnterAnimation">@anim/book_exit_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/book_exit_anim</item>
        <item name="android:activityOpenEnterAnimation">@anim/book_exit_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/book_exit_anim</item>
        <item name="android:windowAnimationStyle">@anim/book_exit_anim</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="text_small">
        <item name="android:textColor">#808080</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_scale_in</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/dialog_scale_out</item>    //退出时的动画
    </style>

    <style name="MyMenuTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

</resources>



